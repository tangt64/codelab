# React build
FROM node:22-alpine AS build
WORKDIR /app
# build context is repo root; react UI lives at ./blog/blog/react-ui
COPY blog/blog/react-ui/package*.json ./
RUN npm ci
COPY blog/blog/react-ui/ ./
RUN npm run build

# Nginx runtime
FROM nginx:stable-alpine
COPY blog/front-nginx/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist/ /usr/share/nginx/html/
EXPOSE 8080
